                android:fontFamily="@font/font1"
                android:paddingLeft="-100dp"
                android:paddingTop="1sp"
                android:text="NÚMERO SETE"
                android:textColor="#E41515"
                android:textSize="35dp"
                app:backgroundTint="#00FFFFFF"
